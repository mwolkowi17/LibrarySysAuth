@model LibrarySysAuth.Models.LibraryViewModel



@{
    ViewData["Title"] = "Index";
}

<h1>Books</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                ID number
                <!-- @Html.DisplayNameFor(model => model.BookCs[0].BookCID)-->
            </th>
            <th>
                Title
                <!-- @Html.DisplayNameFor(model => model.BookCs[0].TitleC)-->
            </th>
            <th>
                Author
                <!-- @Html.DisplayNameFor(model => model.BookCs[0].AuthorC)-->
            </th>
            <th>
                Rented
            </th>
            <th>
                Rented by User
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BookCs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookCID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TitleC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rented)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AliasofReader)
                </td>
                <td>
                    <a asp-action="DropOff" asp-route-id="@item.BookCID">Return book</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.BookCID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />

<div class="container">

    <div class="row">
        <div class="col">
            <p> User: @ViewBag.UserDisplayAlias   ID Number: <b>@ViewBag.UserDisplayNumber </b> </p>
        </div>
    </div>
    <div class="row">

        <div class="col" style="margin-top:70px">
            <form asp-controller="BookList" asp-action="AddBook" autocomplete="off">
                <h5>Add new book</h5>

                <p>
                    Title  <input type="text" name="titlebook" />
                </p>
                <p>
                    Author <input type="text" name="authorbook" />
                </p>
                <p>
                    <input type="submit" value="Add" />
                </p>
            </form>
        </div>
        <div class="col" style="margin-top:70px">
            <form asp-controller="BookList" asp-action="FindUser" autocomplete="off">
                <h5>Find Reader ID</h5>

                <p>
                    Name and Surname <input type="text" name="userdata" />
                </p>

                <p>
                    <input type="submit" value="Find" />
                </p>
            </form>
        </div>
        <div class="col" style="margin-top:70px">
            <form asp-controller="BookList" asp-action="RentBook" autocomplete="off">
                <h5>Rent book</h5>

                <p>
                    Book ID  <input type="text" name="idofbook" />
                </p>
                <p>
                    Reader ID <input type="text" name="idofreader" />
                </p>
                <p>
                    <input type="submit" value="Rent" />
                </p>
            </form>
        </div>
    </div>
</div>

