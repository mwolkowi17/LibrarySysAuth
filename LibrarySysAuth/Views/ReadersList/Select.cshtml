@model LibrarySysAuth.Models.LibraryViewModel



@{
    ViewData["Title"] = "Index";
}
<h1>Rented Books by User:</h1>
<h2>@ViewBag.Nameuser @ViewBag.Surnameuser</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Nr kat
                <!-- @Html.DisplayNameFor(model => model.BookCs[0].BookCID)-->
            </th>
            <th>
                Tytuł
                <!-- @Html.DisplayNameFor(model => model.BookCs[0].TitleC)-->
            </th>
            <th>
                Autor
                <!-- @Html.DisplayNameFor(model => model.BookCs[0].AuthorC)-->
            </th>
            <th>
                Rented
            </th>
            <th>
                Date of rent
            </th>
            <th>
                Date of return
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BookCs)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookCID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TitleC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rented)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentData)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DropOfData)
            </td>
            <td>
                <a asp-controller="BookList" asp-action="DropOff" asp-route-id="@item.BookCID">Zwróć</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.BookCID">Usuń</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<hr />


